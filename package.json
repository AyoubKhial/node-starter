{
    "name": "node-starter",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.js",
    "scripts": {
        "build": "npm run clean && npm run transpile",
        "clean": "rm -rf dist",
        "dev": "NODE_ENV=development nodemon -r dotenv/config --exec babel-node ./src/app.js",
        "lint": "eslint --fix . && echo 'Lint complete.'",
        "server": "node ./dist/app.js",
        "start": "npm run build && npm run server",
        "transpile": "babel ./src --out-dir dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AyoubKhial/node-starter.git"
    },
    "author": "Ayoub KHIAL",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AyoubKhial/node-starter/issues"
    },
    "homepage": "https://github.com/AyoubKhial/node-starter#readme",
    "devDependencies": {
        "dotenv": "^8.2.0",
        "eslint": "^7.9.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-rate-limit": "^5.1.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.6",
        "morgan": "^1.10.0",
        "nodemailer": "^6.4.11",
        "winston": "^3.3.3"
    }
}
